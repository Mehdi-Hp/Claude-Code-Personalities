#!/bin/bash

# Claude Code Personalities - Binary Launcher
# This wrapper ensures the Rust binary is used

set -e

BIN_PATH="$HOME/.local/bin/claude-code-personalities"

if [[ -x "$BIN_PATH" ]]; then
    # Execute the Rust binary with all arguments
    exec "$BIN_PATH" "$@"
else
    echo "Error: claude-code-personalities binary not found at $BIN_PATH"
    echo ""
    echo "Install with:"
    echo "  curl -fsSL https://raw.githubusercontent.com/Mehdi-Hp/claude-code-personalities/main/install.sh | bash"
    exit 1
fi